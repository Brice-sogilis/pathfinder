{
  "name": "grid-storage",
  "version": "1.0.0",
  "description": "Character matrix persistence service",
  "main": "service.js",
  "scripts": {
    "test": "mocha --reporter spec --exit",
    "start": "tsc && node build/service.js",
    "build": "npm run clean && npm run protoc && npm run compile",
    "build-win": "npm run clean-win && npm run protoc-win && npm run compile-win",
    "clean": "rm pb/*.js && rm pb/*.ts && rm-rf build",
    "clean-win": "del pb\\*.ts && del pb\\*.js && rmdir /q /s build",
    "compile": "tsc && cp pb/*.js build/pb/ && cp pb/*.ts build/pb/",
    "compile-win": "tsc && xcopy pb\\*.ts build\\pb\\ && xcopy pb\\*.js build\\pb\\",
    "protoc": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts.cmd --js_out=import_style=commonjs,binary:./ --ts_out=\"service=grpc-node,mode=grpc-js:./\" --grpc_out=grpc_js:./ ./pb/grid.proto",
    "protoc-win": "grpc_tools_node_protoc --plugin=protoc-gen-ts=.\\node_modules\\.bin\\protoc-gen-ts.cmd --js_out=import_style=commonjs,binary:./ --ts_out=\"service=grpc-node,mode=grpc-js:./\" --grpc_out=grpc_js:./ ./pb/grid.proto",
    "lint": "eslint service.ts"
  },
  "author": "Brice Decaestecker",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.4.1",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/google-protobuf": "^3.15.5",
    "@types/mocha": "^9.0.0",
    "@types/mongodb": "^4.0.7",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "google-protobuf": "^3.19.0-rc.2",
    "grpc-tools": "^1.11.2",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "mocha": "^9.1.2",
    "mongodb": "^4.1.3",
    "protoc": "^1.0.4",
    "ts-node": "^10.3.0",
    "ts-protoc-gen": "^0.15.0",
    "typescript": "^4.4.4"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register",
    "timeout": 2500
  }
}
